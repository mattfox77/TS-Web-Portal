# ============================================
# CLERK AUTHENTICATION
# ============================================
# Get these from: https://dashboard.clerk.com
# Navigate to: Your App → API Keys

# Publishable Key (starts with pk_test_ or pk_live_)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Secret Key (starts with sk_test_ or sk_live_)
CLERK_SECRET_KEY=

# Webhook Secret (starts with whsec_)
# Get from: Webhooks → Add Endpoint → Copy Signing Secret
CLERK_WEBHOOK_SECRET=

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ============================================
# PAYPAL INTEGRATION
# ============================================
# Get these from: https://developer.paypal.com/dashboard
# Navigate to: Apps & Credentials → Your App

# Client ID (starts with A)
PAYPAL_CLIENT_ID=

# Client Secret (starts with E)
PAYPAL_CLIENT_SECRET=

# Mode: "sandbox" for testing, "live" for production
PAYPAL_MODE=sandbox

# Webhook ID (starts with WH-)
# Get from: Your App → Webhooks → Add Webhook → Copy Webhook ID
PAYPAL_WEBHOOK_ID=

# ============================================
# GITHUB INTEGRATION
# ============================================
# Get from: https://github.com/settings/tokens
# Navigate to: Developer settings → Personal access tokens → Tokens (classic)
# Required scopes: repo (or public_repo for public repos only)

# Personal Access Token (starts with ghp_)
GITHUB_TOKEN=

# Optional: Webhook Secret for repository webhooks
GITHUB_WEBHOOK_SECRET=

# ============================================
# SENDGRID EMAIL SERVICE
# ============================================
# Get from: https://app.sendgrid.com
# Navigate to: Settings → API Keys → Create API Key

# API Key (starts with SG.)
SENDGRID_API_KEY=

# Verified sender email (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application URL (update for production)
# Development: http://localhost:3000
# Production: https://portal.yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# ============================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Upstash Redis for Rate Limiting (optional)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# ============================================
# DEVELOPMENT ONLY
# ============================================
# These are only needed for local development

# Cloudflare Account ID (for wrangler)
# CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token (for wrangler)
# CLOUDFLARE_API_TOKEN=
